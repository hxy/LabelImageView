<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hy.labelimageview.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/xml_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条形—xml设置属性"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/code_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="条形—代码设置属性"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/xml_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三角形—xml设置属性"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/code_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三角形—代码设置属性"
        android:textSize="16sp"/>

</LinearLayout>
